generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  isAdmin       Boolean   @default(false)
  accounts      Account[]
  sessions      Session[]
  shares        Share[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Share {
  id            String     @id @default(cuid())
  type          ShareType
  ownerId       String?
  owner         User?      @relation(fields: [ownerId], references: [id])
  filePath      String?
  paste         String?
  pastelanguage pasteType?
  urlOriginal   String?
  slug          String     @unique
  password      String?
  createdAt     DateTime   @default(now())
  expiresAt     DateTime?
  ipSource      String?
}

model Settings {
  id            Int  @id @default(autoincrement())
  allowSignin   Boolean @default(true)
  allowAnonFileShare Boolean @default(true)
  // TODO - add S3 support
  anoMaxUpload  Int     @default(2048) // 2Go
  authMaxUpload Int     @default(51200) // ~50Go
  anoIpQuota    Int     @default(4096) // 4Go
  authIpQuota   Int     @default(102400) // ~100Go
  
  // Branding - Identity
  appName       String  @default("SnowShare")
  appDescription String @default("Share your files, pastes, and URLs securely")
  logoUrl       String?
  faviconUrl    String?
  
  // Branding - Colors (Theme System)
  primaryColor      String  @default("#3B82F6")  // Primary color (buttons, links)
  primaryHover      String  @default("#2563EB")  // Primary color hover state
  primaryDark       String  @default("#1E40AF")  // Dark version of primary color
  secondaryColor    String  @default("#8B5CF6")  // Secondary color (accents)
  secondaryHover    String  @default("#7C3AED")  // Secondary color hover state
  secondaryDark     String  @default("#6D28D9")  // Dark version of secondary color
  backgroundColor   String  @default("#111827")  // Main background color
  surfaceColor      String  @default("#1F2937")  // Surface color (cards, panels)
  textColor         String  @default("#F9FAFB")  // Main text color
  textMuted         String  @default("#D1D5DB")  // Secondary/muted text color
  borderColor       String  @default("#374151")  // Border color

  // Legal
  termsOfUses  String?
}

model CustomLink {
  id        String   @id @default(cuid())
  name      String
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ShareType {
  FILE
  PASTE
  URL
}

enum pasteType {
  PLAINTEXT
  JAVASCRIPT
  TYPESCRIPT
  PYTHON
  JAVA
  PHP
  GO
  HTML
  CSS
  SQL
  JSON
  MARKDOWN
}

model OAuthProvider {
  id            String   @id @default(cuid())
  name          String   @unique // github, google, discord, etc.
  displayName   String   // "GitHub", "Google", etc.
  enabled       Boolean  @default(false)
  clientId      String?
  clientSecret  String?  // Encrypted
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
