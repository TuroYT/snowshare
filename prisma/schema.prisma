generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  isAdmin       Boolean   @default(false)
  accounts      Account[]
  sessions      Session[]
  shares        Share[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Share {
  id            String     @id @default(cuid())
  type          ShareType
  ownerId       String?
  owner         User?      @relation(fields: [ownerId], references: [id])
  filePath      String?
  paste         String?
  pastelanguage pasteType?
  urlOriginal   String?
  slug          String     @unique
  password      String?
  createdAt     DateTime   @default(now())
  expiresAt     DateTime?
  ipSource      String?
}

model Settings {
  id            Int  @id @default(autoincrement())
  allowSignin   Boolean @default(true)
  // TODO - add S3 support
  // TODO - Implements quota
  anoMaxUpload  Int     @default(2048) // 2Go
  authMaxUpload Int     @default(51200) // ~50Go
  anoIpQuota    Int     @default(4096) // 4Go
  authIpQuota   Int     @default(102400) // ~100Go

}

enum ShareType {
  FILE
  PASTE
  URL
}

enum pasteType {
  PLAINTEXT
  JAVASCRIPT
  TYPESCRIPT
  PYTHON
  JAVA
  PHP
  GO
  HTML
  CSS
  SQL
  JSON
  MARKDOWN
}
